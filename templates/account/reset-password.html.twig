{% extends 'login-base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="bg-white">
    <div class="container login mt-0">

    <div class="row">
        <div class="offset-md-3 col-md-6 text-center">

            {# logo #}
            <img class="logo large" src="{{ asset('images/logo_intramilo_large.png') }}" alt="Logo Intramilo">

            {# Description #}
            <div class="description">
                Vous avez oublié votre mot de passe ? Pas de panique &#128521 <br>
                Entrez votre adresse mail pour pouvoir le réinitialiser.
            </div>

            <div class="login-form text-left mt-4">
                <form action="{{ path('account_reset_password') }}" method="post" class="">
                    {# {% if no_email is defined and no_email %} was-validated {% endif %} #}
                    {% if (no_email is defined) and no_email %}
                        <div class="alert alert-danger my-box">
                            <div>
                                <i class="fas fa-exclamation-circle rouge mr-2"></i>
                                Cet email n'existe pas.
                            </div>
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <input type="text" name="email" id="email" class="form-control" placeholder="Tapez ici votre adresse mail" required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-login mt-0">Réinitialiser le mot de passe</button>
                    </div>
                </form>
            </div>

            <div class="no-account">
                <a href="{{ path('account_login') }}">Retour à la page de connexion</a>
            </div>
        
        </div>

    </div>
</div>
{% endblock %}
