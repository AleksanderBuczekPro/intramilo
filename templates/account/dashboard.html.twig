{% extends 'base.html.twig' %}

{% block title %}
    Documentation - Tableau de bord
{% endblock %}


{% block body %}



{# <div class="row dashboard"> #}

    {# Dashboard Sidebar #}
    
    {% include 'account/_dashboard_sidebar.html.twig' %}

    <div class="my-content">
        <div class="my-h1">Mes documents <a href="{{ path('sheet_create') }}" class="btn btn-my-primary ml-3" target="_blank"><i class="uil uil-plus"></i> Créer une fiche</a> <a href="{{ path('document_create') }}" class="btn btn-my-primary ml-1" target="_blank"><i class="uil uil-plus"></i> Créer un document</a></div>

        <table class="table my-table admin">
            <thead>
                <tr>
                    <th colspan="2">Documents <span class="number"><span>{{ app.user.sheets|length + app.user.documents|length }}</span></span></th>
                    <th>Dossier</th>
                    <th>Dernière mise à jour</th>
                    <th>Etat</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {# A corriger #}
            {% for file in filesToCorrect %}
                {% include '/account/_dashboard_table_row.html.twig' with {'file': file} %}
            {% endfor %}

            {# Obsolètes #}
            {% for file in filesObsolete %}
                {% include '/account/_dashboard_table_row.html.twig' with {'file': file} %}
            {% endfor %}

            {# Bientôt obsolètes #}
            {% for file in filesWellObsolete %}
                {% include '/account/_dashboard_table_row.html.twig' with {'file': file} %}
            {% endfor %}

            {# En attente de validation #}
            {% for file in filesToValidate %}
                {% include '/account/_dashboard_table_row.html.twig' with {'file': file} %}
            {% endfor %}

            {# A jour #}
            {% for file in filesUpToDate %}
                {% include '/account/_dashboard_table_row.html.twig' with {'file': file} %}
            {% endfor %}
            </tbody>
        </table>
    
    </div>


{% endblock %}
{% block javascripts %}
<script>

    $('tr[data-href]').on("click", function() {
        document.location = $(this).data('href');
    });

</script>

{% endblock %}