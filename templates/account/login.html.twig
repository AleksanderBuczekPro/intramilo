{%  block javascripts %}

    <script>

        $('#eye').click(function(){
        
            if($(this).hasClass('uil-eye-slash')){
            
                $(this).removeClass('uil-eye-slash');
                
                $(this).addClass('uil-eye');
                
                $('#password').attr('type','text');
                
            }else{
            
                $(this).removeClass('uil-eye');
                
                $(this).addClass('uil-eye-slash');  
                
                $('#password').attr('type','password');

            }
        });

    </script>

