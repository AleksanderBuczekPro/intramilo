{% extends 'login-base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="bg-white">
    <div class="container login mt-0">

    <div class="row">
        <div class="offset-xl-3 col-xl-6 offset-lg-3 col-lg-6 offset-md-2 col-md-8 text-center">

            {# logo #}
            <img class="logo" src="{{ asset('images/logo_intramilo.png') }}" alt="Logo Intramilo">

            {# Description #}
            <div class="description">
                Bienvenue ! Vous êtes sur le site Intranet <br>
                de la Mission Locale de l’arrondissement de Dijon
            </div>

            {% for label, messages in app.flashes %}
                <div class="container">
                    <div class="alert alert-{{ label }} my-box">
                        {% for message in messages %}
                        <p class="mb-0">{{ message | raw}}</p>    
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            <div class="login-form text-left mt-4">
                <form action="{{ path('account_login') }}" method="post">

                    {% if hasError %}
                        <div class="alert alert-danger my-box">
                            <div>
                                <i class="fas fa-exclamation-circle rouge mr-2"></i>
                                L'email ou le mot de passe est invalide.
                            </div>
                        </div>
                    {% endif %}
                    <div class="form-group">
                        {# <label for="email">Email</label> #}
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail" required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        {# <label for="password">Mot de passe</label> #}
                        <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" required>
                        <span class="eye-icon float-right">
                            <i id="eye" class="uil uil-eye-slash"></i>
                        </span>
                        {# <div class="input-group mb-3">
                            
                            <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control password-input" required>
