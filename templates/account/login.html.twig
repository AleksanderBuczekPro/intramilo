                                <button class="btn btn-eye  no-focus" type="button" id="button-addon2"><i class="uil uil-eye"></i></button>
                            </div>
                        </div> #}

                    </div>
                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-login mt-0">Me connecter</button>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm">
                            <input class="mr-1" type="checkbox" id="remember_me" name="_remember_me" checked/>
                            <label for="remember_me">Se souvenir de moi</label>
                        </div>
                        <div class="col-md-6 col-sm">
                            <div class="text-right"><a href="{{ path('account_reset_password') }}">Mot de passe oublié ?</a></div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="no-account op-70">
                Pas encore de compte ? Contactez un administrateur
            </div>
        
        </div>

    </div>
</div>


