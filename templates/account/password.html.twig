{% extends 'base.html.twig' %}

{% block title %}Mot de passe{% endblock %}

{% block body %}
    <div class="container clearfix">
    
    {{ form_start(form) }}

        <div class="col-md-10 offset-md-1">
            <div class="card my-card no-border my-box p-4">
                <div class="card-body p-4">

                    <h1 class="my-h1">
                        Mot de passe
                    </h1>

                    {# Old #}
                    <div class="col-lg-6 col-md-6 px-0">
                        {{ form_row(form.oldPassword, { 'attr': {'autocomplete': 'new-password'} }) }}
                    </div>

                    {# New #}
                    <div class="col-lg-6 col-md-6 px-0">
                        {{ form_row(form.newPassword, { 'attr': {'autocomplete': 'new-password'} }) }}
                    </div>

                    {# Confirm #}
                    <div class="col-lg-6 col-md-6 px-0">
                        {{ form_row(form.confirmPassword, { 'attr': {'autocomplete': 'new-password'} }) }}
                    </div>


                    <button type="submit" class="btn btn-my-primary float-right mt-4">Modifier le mot de passe</button>
                    <a href="{{ path('account_index') }}" class="btn mt-4 float-right rouge">Annuler</a>  
                
                </div>    
            </div>
        </div>

{{ form_end(form) }}
</div>
    

{% endblock %}