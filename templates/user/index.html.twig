            {% endfor %}


      </div>
      <div class="modal-footer no-border">
        
        <button type="button" class="btn rouge" data-dismiss="modal">Annuler</button>
        <a type="button" href="" class="btn btn-my-primary add disabled">C'est parti !</a>
      </div>
    </div>
  </div>
</div>

