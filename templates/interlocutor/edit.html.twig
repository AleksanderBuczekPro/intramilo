{% extends 'base.html.twig' %}

{% block title %}Midification d'un interlocuteur{% endblock %}

{% block body %}

     <div class="container">

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">

                <div class="card my-card no-border p-4 my-box">
                    <div class="card-body p-4">
                        <h1 class="my-h1">
                            {{ interlocutor.firstName }} {{ interlocutor.lastName }}
                            <p class="text">de {{ organization.name }}</p>
                        </h1>
                        <div class="row">

                            {# Nom #}
                            <div class="col-md-4">
                                {{ form_row(form.firstName, { 'attr': {'autocomplete': 'new-password'} }) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.lastName, { 'attr': {'autocomplete': 'new-password'} }) }}
                            </div>
                            <div class="col-md-4"></div>

                            {# Function #}
                            <div class="col-md-8">
                                {{ form_row(form.function, { 'attr': {'autocomplete': 'new-password'} }) }}
                            </div>
                            <div class="col-md-4"></div>

                            {# Num√©ro #}
                            <div class="col-lg-4 col-md-6">
                                {{ form_row(form.phoneNumber, { 'attr': {'autocomplete': 'new-password'} }) }}
                            </div>
                            <div class="col-lg-8 col-md-6"></div>

                            {# Email #}
                            <div class="col-md-8">
                                {{ form_row(form.email, { 'attr': {'autocomplete': 'new-password'} }) }}
                            </div>
                            <div class="col-md-4"></div>

                        </div>
                        <button type="submit" class="btn btn-my-green float-right mt-4">
                            Modifier
                        </button>
                        <a href="{{ path('organizations_index', {'id': organization.id }) }}" class="btn rouge float-right mr-1 mt-4">Annuler</a>      
                    </div>
                </div>
                
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}