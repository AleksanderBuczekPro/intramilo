{% extends 'base.html.twig' %}

{% block title %}
    Documentation
{% endblock %}


{% block header %}

{% endblock %}


{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-2 sidebar text-center">
            <a href="{{ path('doc_index') }}" class="btn btn-my-secondary bg-white"><i class="d-sm-block d-md-block d-lg-block d-xl-none uil uil-angle-left-b"></i><span class="d-none d-sm-none d-md-none d-lg-none d-xl-block"><i class="uil uil-angle-left-b"></i> Documentation</span></a>
        </div>
        <div class="col-8 mt-2">

            <h1 class="mt-6">{{ pole }}</h1>

            <div class="row">
                {% for cat in pole.category %}

                    {% include 'documentation/_category_card.html.twig' with {'category': cat }  %}

                {% endfor %}
            </div>
        </div>
    
    </div>
</div>




{% endblock %}






{% block javascripts %}

<script>

$( ".see" ).click(function() {

    if($(this).hasClass('more')){
        
        console.log('oui');
        $(this).removeClass('more');
        $(this).html("Voir moins <i class='uil uil-angle-up'></i>");

    }else{
        
        console.log('non');
        $(this).addClass('more');
        $(this).html("Voir plus <i class='uil uil-angle-down'></i>");

    }


});

</script>

{% endblock %}