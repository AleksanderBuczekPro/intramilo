            <div class="row mt-6 mb-4">
                <div class="col-12">
                    <div class="my-title mb-4">Mes favoris</div>

                    <div class="row">
                        
                        {% if app.user.favorites|length > 0 %}
                            {% for file in app.user.favorites %}

                                {# Sheet Archived ? #}
                                {% if file.archivedAt is defined and file.archivedAt is not null  %}

                                {% else %}
                                    <div class="col-lg-6 front white">
                                        {% include 'documentation/_file.html.twig' %}
                                    </div>
                                {% endif %}

                            {% endfor %}
                        {% else %}
                            <p class="text mx-3">Aucun favori ajouté</p>
                        {% endif %}

                    </div>
                </div>
            </div>


            {# Most Popular #}
