{# Affichage du formulaire ParagraphType #}

{% block _sheet_paragraphs_entry_row %}
    {{ form_widget(form) }}
{% endblock %}


{% block _sheet_paragraphs_widget %}

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-paragraph-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-paragraph" class="btn btn-my-primary-light mt-4">
        <i class="uil uil-plus"></i> Ajouter une section
        </button>
    </div>
{% endblock %}

{# Pour chaque Paragraph ajouté #}
{% block _sheet_paragraphs_entry_widget %}

    <div class="form-group paragraph" id="block_paragraph_{{id}}">

        <div class="row mb-3">
            <div class="col-10 paragraph mb-2">
                    {{ form_widget(form.title) }}
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_paragraph_{{id}}" class="btn btn-my-danger px-3 mt-3"><i class="fas fa-times"></i></button>
            </div>
            <div class="col-10 paragraph">
                    {{ form_widget(form.content) }}
            </div>
            <div class="col-2">
                
            </div>
            <hr>
        </div>        

    </div>

{% endblock %}


