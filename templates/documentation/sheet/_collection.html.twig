            <button type="button" id="{{id}}" class="btn btn-my-outline marine small add-section float-right px-3">
                Ajouter une ligne
            </button>
        </div>
        

    </div>

{% endblock %}



{# Pour chaque ligne #}
{% block _sheet_headers_entry_sections_entry_row %}
    <div class="form-group section mb-0" id="block_section_{{id}}">

        <div class="row">
            <div class="col-5 section title">
                {{ form_widget(form.title, { 'attr': {'autocomplete': 'off'} }) }}
            </div>
            <div class="col-xl-5 col-lg-5 section content">
                {{ form_widget(form.content, { 'attr': {'autocomplete': 'off'} }) }}
            </div>
            <div class="col-xl-2 col-lg-2 text-center">
                <button type="button" data-action="delete" data-target="#block_section_{{id}}" class="btn op-40 marine px-3 pt-0 float-right"><i class="uil uil-times"></i></button>
            </div>
        
        </div>

        
    
    </div>

{% endblock %}


