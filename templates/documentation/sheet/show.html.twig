            var path = "{{ path('sheet_validate') }}";


            $.ajax({

                type: 'POST',
                url: path,
                data: { id: id, paragraphs: paragraphs},
                success: function(data) {

                    location.reload();
                    
                },
                error: function(data) {
                    /*console.log(data);
                    alert("Error !")*/
                }

            });
    
            //location.reload();
        
        });

        

