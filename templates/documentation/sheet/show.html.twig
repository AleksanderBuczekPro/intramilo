                                    {% for section in h.sections %}
                                        <tr>
                                            <th class="no-border">{{ section.title }}</th>
                                            <td class="no-border">{{ section.content }}</td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>
                            </div>
                        </div>
                    </div>
                    
                    {% endfor %}

                    <div class="row mt-4 d-print-none">
