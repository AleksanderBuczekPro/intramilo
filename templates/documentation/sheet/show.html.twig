                    {# {% if sheet.organization and sheet.status == "DRAFT" %}

                        <a href="{{ path('sheet_front', {'id': sheet.id }) }}" class="btn btn-my-primary small {% if sheet.front %}active{% endif %} float-right">
                        {% if is_granted("ROLE_ADMIN") %}
