{% extends 'base.html.twig' %}

{% block title %}
    Documentation - Ajout d'un document
{% endblock %}

{% block body %}

    <div class="container">

        

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">

                <h1 class="my-5">Modification d'un document</h1>

                <div class="card p-4">
                    <div class="card-body">
                        <h6 class="card-title mb-3">Catégorie {{ category.title }} / {{ subCategory.title }}</h6>
                        
                        {{ form_widget(form) }}
                        
                        <button type="submit" class="btn btn-success mt-4 float-right">
                            <i class="fas fa-check"></i> Modifier le document
                        </button>
                    </div>
                </div>

            </div>
        </div>

        {{ form_end(form) }}


    </div>

{% endblock %}

{% block javascripts %}

    <script>

        $('#document_genericFile_file').next().html('<span class="op-40"><i class="fas fa-upload mr-3"></i> Mettre à jour </span>');

        $('input#document_genericFile_file').on('change',function(){

            var name = (this.files[0].name).split('.', 1);
            $(this,'#document_genericFile_file').next().html('<i class="fas fa-check-circle success mr-3"></i>' + name + '');


        });

    </script>


{% endblock %}