{% extends 'admin/base.html.twig' %}

{% block title %}Ajout d'un pôle{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">

                <a href="{{ path('admin_poles_index') }}" class="btn btn-primary">Retour à la liste des pôles</a>
                <h1 class="my-5">Ajout d'un pôle</h1>

                <div class="card">
                    <div class="card-body">

                        {{ form_widget(form) }}

                        <button type="submit" class="btn btn-success float-right mt-2">
                            <i class="fas fa-check"></i> Ajouter le pôle
                        </button>
                        <a href="{{ path('admin_poles_index') }}" class="btn btn-outline-danger float-right mr-1 mt-2">Annuler</a>      
                    </div>
                </div>
                
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}