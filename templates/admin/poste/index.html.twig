{% extends 'admin/base.html.twig' %}

{% block title %}Liste des postes{% endblock %}

{% block body %}

<div class="container backoffice-container bg-white my-box">
    
    <h1 class="my-h1">
        Liste des postes
        <a href="{{ path('admin_poste_create') }}" class="btn btn-my-primary float-right">
            <i class="uil uil-plus"></i>
            Ajouter un poste
        </a>        
    </h1>

    <table class="table my-table admin backoffice">
        <thead>
            <tr>
                <th class="text-left violet w-75" colspan="2">Poste</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>

        

        {% for poste in postes %}
            <tr>
                <td class="text-left main">
                    {{ poste }}
                </td>
                <td class="">
                    <span class="d-none d-lg-table-cell">
                        {% for user in poste.users %}
                            {% include '_picture.html.twig' with {'user': user, 'class': 'medium'} %}
                        {% endfor %}
                    </span>
                </td>
                {# <td class="pr-0">
                    <a href="{{ path('admin_poste_edit', {'id':  poste.id }) }}" class="btn btn-my-warning">
                        <i class="uil uil-pen"></i> Modifier
                    </a>
                </td>
                <td class="pl-0">
                    <a href="" class="btn btn-my-danger">
                        <i class="uil uil-times"></i> Supprimer
                    </a>
                </td> #}
                <td class="w-50p">
                    <div class="dropdown float-right w-50p">
                        <button class="btn btn-my-secondary bg-transparent" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="uil uil-ellipsis-v"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right my-dropdown " aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item pl-3" href="{{ path('admin_poste_edit', {'id':  poste.id }) }}"><span class="rounded"><i class="fas fa-pen fa-xs my-rounded"></i></span> Modifier</a>
                                <a class="dropdown-item pl-3" href="{{ path('admin_poste_delete', {'id':  poste.id }) }}"><span class="rounded"><i class="fas fa-times my-rounded"></i></span> Supprimer</a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>            
</div>



{% endblock %}


