{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des postes{% endblock %}

{% block body %}
<div class="container">

    <div class="card p-1">
        <div class="card-body">
        
            <h2 class="card-title mb-3">Liste des postes <a href="{{ path('admin_poste_create') }}" class="btn btn-primary float-right m-3">Ajouter un poste</a></h2>
            <table class="table admin table-hover">
            <thead>
                <tr>
                    <th>Poste</th>
                    <th class="text-center">Utilisateurs</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for poste in postes %}
                <tr>
                    <td><strong>{{ poste.title }}</strong></td>
                    <td class="text-center">
                    <span class="badge badge-info" data-toggle="tooltip" data-placement="top" title="
                        {% if poste.users|length > 0 %}

                            {% for user in poste.users %}
                                {{ user }} <br>
                            {% endfor %}

                        {% else %}

                            Aucun utilisateur

                        {% endif %}                                    
                    ">{{ poste.users|length }}</span>
                    <td class="text-center">
                        <a href="{{ path('admin_poste_edit', {'id':  poste.id }) }}" class="btn btn-link">Modifier</a>
                        <a href="{{ path('admin_poste_delete', {'id':  poste.id }) }}" class="btn btn-link">Supprimer</a>
                    </td>

                </tr>

                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>


</div>
{% endblock %}
