{% extends 'admin/base.html.twig' %}

{% block title %}Création d'un compte utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5"></h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">
                <a href="{{ path('admin_users_index') }}" class="btn btn-primary">Retour à la liste des utilisateurs</a>
                <h1 class="my-5">Ajout d'un nouveau utilisateur</h1>

                    <div class="card p-4">
                        <div class="card-body">
                        <h6 class="card-title mb-3">Informations générales</h6>
                            {{ form_row(form.firstName) }}
                            {{ form_row(form.lastName) }}
                            {{ form_row(form.email) }}
                        </div>
                    </div>

                    <div class="card p-4">
                        <div class="card-body">
                        <h6 class="card-title mb-3">Poste et coordonnées</h6>
                            {{ form_row(form.poste) }}
                            {{ form_row(form.introduction) }}
                            {{ form_row(form.groupe) }}    

                            {{ form_row(form.antenne) }}
                            {{ form_row(form.phoneNumber) }}
                                                    
                        </div>
                    </div>

                    <div class="card p-4">
                        <div class="card-body">
                        <h6 class="card-title mb-3">Mot de passe</h6>
                            {{ form_row(form.hash) }}
                            {{ form_row(form.passwordConfirm) }}    
                            
                            
                            <button type="submit" class="btn btn-success float-right mt-2">Ajouter l'utilisateur</button>
                            <a href="{{ path('admin_users_index') }}" class="btn btn-outline-danger float-right mr-1 mt-2">Annuler</a>                   
                        </div>
                    </div>
            </div>
        </div>



        
        {{ form_end(form) }}
    </div>

{% endblock %}