{% extends 'admin/base.html.twig' %}

{% block title %}Ajout d'une antenne{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">

                <a href="{{ path('admin_antennes_index') }}" class="btn btn-primary">Retour Ã  la liste des antennes</a>
                <h1 class="my-5">Ajout d'une antenne</h1>

                <div class="card">
                    <div class="card-body">
                        {{ form_row(form.title) }}
                    
                        <div class="row">
                            <div class="col-5">{{ form_row(form.address) }}</div>
                            <div class="col-2">{{ form_row(form.postcode) }}</div>
                            <div class="col-5">{{ form_row(form.city) }}</div>
                        </div>
                        
                        
                        {{ form_row(form.phoneNumber) }}

                        <button type="submit" class="btn btn-success float-right mt-2">
                            <i class="fas fa-check"></i> Ajouter l'antenne
                        </button>
                        <a href="{{ path('admin_antennes_index') }}" class="btn btn-outline-danger float-right mr-1 mt-2">Annuler</a>      
                    </div>
                </div>
                
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
