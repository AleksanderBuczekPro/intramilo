{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'une sous-catégorie{% endblock %}

{% block body %}

<div class="container">

    <div class="row">
        <div class="col-8 offset-md-2">
        
            <h1 class="my-h1">
                <a href="{{ path('admin_category_index', {'id': category.id }) }}" class="btn btn-my-dark"><i class="uil uil-arrow-left"></i> Retour à la liste des sous-catégories</a> <br>
                {{ category.title }}
            </h1>

            {{ form_start(form) }}

                <div class="row">

                
                    {# Titre #}
                    <div class="col-2 text-right my-auto">
                        <span class="align-middle">{{ form_label(form.category) }}</span>
                    </div>

                    <div class="col-10">
                        {{ form_widget(form.category) }}
                    </div>

                    {# Titre #}
                    <div class="col-2 text-right my-auto">
                        <span class="align-middle">{{ form_label(form.title) }}</span>
                    </div>

                    <div class="col-10">
                        {{ form_widget(form.title) }}
                    </div>


                    {# Auteur #}
                    <div class="col-2 text-right my-auto">
                        <span class="align-middle">{{ form_label(form.author) }}</span>
                    </div>

                    <div class="col-10">
                        {{ form_widget(form.author) }}
                    </div>

                </div>

                <div class="mt-4 mb-4">
                    <button type="submit" class="btn btn-my-add-admin float-right"><i class="uil uil-plus"></i> Modifier la sous-catégorie</button>
                    <a href="{{ path('admin_category_index', {'id': category.id }) }}" class="btn btn-my-danger float-right"><i class="uil uil-times"></i> Annuler</a>
                </div>

            {{ form_end(form) }}

        </div>
    </div>


</div>
{% endblock %}