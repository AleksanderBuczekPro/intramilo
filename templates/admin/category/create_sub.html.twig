{% extends 'admin/base.html.twig' %}

{% block title %}Création d'une sous-catégorie{% endblock %}

{% block body %}

<div class="container backoffice-container bg-white my-box">

        
            <h1 class="my-h1">
                {# <a href="{{ path('admin_users_index') }}" class="btn btn-my-secondary small"><i class="uil uil-arrow-left"></i></a> #}
                Nouvelle sous-catégorie
            </h1>

            {{ form_start(form) }}

                <div class="row">

                    {# Category #}
                    <div class="col-lg-4 col-md-6">
                        {{ form_row(form.category, { 'attr': {'autocomplete': 'new-password'} }) }}
                    </div>
                    <div class="col-lg-8 col-md-6"></div>

                    {# Titre #}
                    <div class="col-lg-4 col-md-6">
                        {{ form_row(form.title, { 'attr': {'autocomplete': 'new-password'} }) }}
                    </div>
                    <div class="col-lg-8 col-md-6"></div>

                    {# Authors #}
                    <div class="col-lg-8 col-md-12">
                        {{ form_row(form.authors, { 'attr': {'autocomplete': 'new-password'} }) }}
                    </div>
                    <div class="col-lg-4"></div>


                </div>


                

                <div class="row mt-2">
                    <div class="col-12">
                        <button type="submit" class="btn btn-my-primary mr-2 mt-4">Créer la sous-catégorie</button>
                        <a href="{{ path('admin_category_index', {'id': category.id }) }}" class="btn mt-4 rouge">Annuler</a>  
                    </div>

                
                </div>

            {{ form_end(form) }}


</div>



{% endblock %}

{% block javascripts %}


{% endblock %}










