{% extends 'admin/base.html.twig' %}

{% block title %}Création d'une catégorie{% endblock %}

{% block body %}

<div class="container backoffice-container bg-white my-box">

        
    <h1 class="my-h1">
        {# <a href="{{ path('admin_users_index') }}" class="btn btn-my-secondary small"><i class="uil uil-arrow-left"></i></a> #}
        Nouvelle catégorie
    </h1>

    {{ form_start(form) }}

        <div class="row">

            {# Pole #}
            <div class="col-lg-4 col-md-6">
                {{ form_row(form.pole, { 'attr': {'autocomplete': 'new-password'} }) }}
            </div>
            <div class="col-lg-8 col-md-6"></div>

            {# Title #}
            <div class="col-lg-4 col-md-6">
                {{ form_row(form.title, { 'attr': {'autocomplete': 'new-password'} }) }}
            </div>
            <div class="col-lg-8 col-md-6"></div>

        </div>


        

        <div class="row mt-2">
            <div class="col-12">
                <button type="submit" class="btn btn-my-primary mr-2 mt-4">Créer la catégorie</button>
                <a href="{{ path('admin_documentation_index') }}" class="btn mt-4 rouge">Annuler</a>  
            </div>

        
        </div>

    {{ form_end(form) }}


</div>



{% endblock %}

