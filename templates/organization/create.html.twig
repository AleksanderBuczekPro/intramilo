{% extends 'base.html.twig' %}

{% block title %}Ajout d'un organisme{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">

                {# <a href="{{ path('organizations_index') }}" class="btn btn-primary">Retour Ã  la liste des organismes</a> #}
                

                <div class="card my-card no-border my-box p-4 mb-4">
                    <h3 class="p-4 my-1">Nouvel organisme</h3>
                    <div class="card-body px-4">
                        {{ form_row(form.name) }}
                        {{ form_row(form.logo) }}                    
                        <div class="row mt-4">
                            <div class="col-6">{{ form_row(form.address) }}</div>
                            <div class="col-6"></div>
                            <div class="col-2">{{ form_row(form.postcode) }}</div>
                            <div class="col-10"></div>
                            <div class="col-6">{{ form_row(form.city) }}</div>
                            <div class="col-6"></div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-6">{{ form_row(form.phoneNumber) }}</div>
                            <div class="col-6"></div>
                            <div class="col-6">{{ form_row(form.email) }}</div>
                            <div class="col-6"></div>
                            <div class="col-6">{{ form_row(form.website) }}</div>
                            <div class="col-6"></div>
                        </div>
                        
                        
                        

                        <button type="submit" class="btn btn-my-primary mt-4">
                            <i class="fas fa-check"></i> Ajouter l'organisme
                        </button>
                        <a href="{{ path('organizations_index') }}" class="btn rouge mt-4">Annuler</a>      
                    </div>
                </div>
                
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
